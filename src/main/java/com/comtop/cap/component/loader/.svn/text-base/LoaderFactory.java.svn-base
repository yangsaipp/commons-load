package com.dreamtech.lds.component.loader;

/**
 * 用于创建loader
 * 
 * @author sai.yang
 * 
 */
public class LoaderFactory {

	/**
	 * 创建 http loader，注意这里返回的始终是同一个对象
	 * 
	 * @return
	 */
	public static Loadable createHttpLoader() {
		return HttpLoader.instance;
	}

	/**
	 * 
	 * @Methodname: createFtpLoader
	 * @Discription: 使用loaderConfig创建ftp loader,注意这里每次都会创建一个新的loader
	 * @param config
	 * @return
	 */
	public static Loadable createFtpLoader(LoaderConfig config) {
		return new ApacheFtpLoader(config);
	}

	/**
	 * 
	 * @Methodname: createFtpLoader 注意这里返回的始终是同一个对象
	 * @Discription: 创建ftp loader
	 * @return
	 * 
	 */
	public static Loadable createFtpLoader() {
		return ApacheFtpLoader.instance;
	}

	public static Loadable createLoader(LoaderType type) {
		switch (type) {
		case HTTP:
			return new HttpLoader();
		case FTP:
			return new ApacheFtpLoader();
		default:
			return null;
		}
	}

}
